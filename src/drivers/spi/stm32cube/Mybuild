package embox.driver.spi

@BuildDepends(third_party.bsp.st_bsp_api)
module stm32_cube {
	option number log_level=1

	source "stm32.c"

	depends embox.driver.spi.core
	depends third_party.bsp.st_bsp_api
}

@BuildDepends(stm32_cube)
module stm32_spi1 {
	option number log_level=1
	source "stm32_spi1.c"
}

@BuildDepends(stm32_cube)
module stm32_spi2 {
	option number log_level=1
	source "stm32_spi2.c"
}

@BuildDepends(stm32_cube)
module stm32_spi3 {
	option number log_level=1

	option number pullup=1

	source "stm32_spi3.c"
}

@BuildDepends(stm32_cube)
module stm32_spi5 {
	option number log_level=1
	source "stm32_spi5.c"
}

@BuildDepends(third_party.bsp.st_bsp_api)
module stm32_spi {
	option number log_level=1

	source "stm32_spi.c"

	depends embox.driver.spi.core
	depends third_party.bsp.st_bsp_api
}
